<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.E_Commerce_App"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SIGNUP" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.LOGIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminSettings"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ADMINSETTINGS" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Users"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.USERS" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Inventory"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.INVENTORY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllProductsListed"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.ALLPRODUCTSLISTED" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PRODUCTPAGE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllOrders"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.ALLORDERS" />
        </intent-filter>
        </activity>
        <activity
            android:name=".MyCart"
            android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MYCART" />
        </intent-filter>
        </activity>
    </application>

</manifest>